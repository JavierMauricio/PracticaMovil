                    size_hint_x: .6
                    pos_hint: {'center_x': 0.5, 'center_y':  0.2}

                MDIconButton:
                    icon: "eye-off"
                    ripple_scale: .5
                    pos_hint: {'center_x': 0.78, "center_y": 0.3}
