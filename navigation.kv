                    on_release: root.menu_location.open()

                MDTextField:
                    id: text_email
                    required: True
                    helper_text_mode: "on_error"
                    helper_text: "Ingrese correo electr贸nico"
                    hint_text: "Correo electr贸nico"
                    validator: "email"
                    font_size: 35
                    icon_left: "email-outline"
